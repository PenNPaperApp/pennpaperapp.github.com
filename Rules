#!/usr/bin/env ruby

# A few helpful tips about the Rules file:
#
# * The order of rules is important: for each item, only the first matching
#   rule is applied.
#
# * Item identifiers start and end with a slash (e.g. “/about/” for the file
#   “content/about.html”). To select all children, grandchildren, … of an
#   item, use the pattern “/about/*/”; “/about/*” will also select the parent,
#   because “*” matches zero or more characters.

require 'compass'
require 'html5-boilerplate'
require 'fancy-buttons'

Compass.add_project_configuration 'compass/config.rb' # when using Compass 0.10


compile '/stylesheets/images/*' do

end

compile '/CNAME' do
end

compile '/images/*' do

end

compile '/javascript/*' do

end

compile '/stylesheets/partials/*' do
  # don’t compile partials
end

compile '/stylesheets/*/' do
  filter :sass, Compass.sass_engine_options
end



compile '*' do
  filter :haml
  layout 'default'
end

route '/stylesheets/images/*' do
  item.identifier.chop + '.' + item[:extension]
end

route '/javascript/*' do
  item.identifier.chop + '.' + item[:extension]
end
route '/CNAME' do
  '/CNAME'
end
route '/stylesheets/partials/*/' do
  nil
end
route '/stylesheets/*/' do
   item.identifier.chop + '.css'
end

route '*' do
  if item.binary?
    # /foo/ -> /foo.ext
    item.identifier.chop + '.' + item[:extension]
  else
    # /foo/ -> /foo/index.html
    item.identifier + 'index.html'
  end
end

layout '*', :haml, :format => :html5
